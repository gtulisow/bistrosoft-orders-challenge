{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "Microsoft.EntityFrameworkCore.Infrastructure": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} | {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "Bistrosoft.Orders.Api",
      "Environment": "Development"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=BistrosoftOrdersDb;User Id=sa;Password=Admin1234!;TrustServerCertificate=True;"
  },
  "Database": {
    "UseInMemory": false,
    "Note": "Set UseInMemory to true to use EF Core InMemory provider instead of SQL Server. When true, ConnectionStrings:DefaultConnection is ignored."
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:8080",
      "https://localhost:5001"
    ],
    "AllowCredentials": false
  },
  "Jwt": {
    "Issuer": "Bistrosoft.Orders",
    "Audience": "Bistrosoft.Orders.Client",
    "Key": "DEV_SECRET_KEY_FOR_JWT_DO_NOT_USE_IN_PRODUCTION_12345678901234567890",
    "ExpiresMinutes": 10
  }
}
